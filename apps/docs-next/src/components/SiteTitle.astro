---
import { fetchSettings } from "../_api/fetchGlobals"
import {getSiteURL} from "../_utils";
import type { Media as MediaType } from "@studs/cms";
import Media from "./Media/index.astro";

const settings = await fetchSettings()
const logo = settings.logo as MediaType
---

<a href={getSiteURL()} class="site-title sl-flex">
				{logo && <Media resource={logo} />}
			</>
</a>

<style>
	a {
		img {
			height: calc(var(--sl-nav-height) - 2 * var(--sl-nav-pad-y));
			width: auto;
			max-width: 100%;
			object-fit: contain;
			object-position: 0 50%;
			max-height: 50px;
		}
	}
</style>
