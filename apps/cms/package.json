{
  "name": "@studs/cms",
  "description": "Payload CMS for STUDS Docs",
  "version": "1.0.1",
  "main": "dist/server.js",
  "license": "MIT",
  "exports": {
    "schema": "./src/payload/generated-schema.graphql",
    "types": "./src/payload/payload-types.ts"
  },
  "scripts": {
    "dev:docs-next": "pnpm generate:wca && cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build:payload": "pnpm generate:wca && cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "pnpm copyfiles && pnpm build:payload && pnpm build:server",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=production node dist/server.js",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,js}\" dist/",
    "generate:wca": "wca analyze '../../packages/ui/src/**/*.{js,ts}' --outFile src/generated-elements.json",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "generate:graphQLSchema": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:graphQLSchema",
    "payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload",
    "clean": "rm -rf dist && rm -rf build && rm -rf node_modules && rm -rf .turbo"
  },
  "dependencies": {
    "@payloadcms/bundler-webpack": "^1.0.6",
    "@payloadcms/db-mongodb": "^1.4.4",
    "@payloadcms/plugin-cloud": "^3.0.0",
    "@payloadcms/plugin-nested-docs": "^1.0.12",
    "@payloadcms/plugin-redirects": "^1.0.1",
    "@payloadcms/plugin-seo": "^2.3.0",
    "@payloadcms/richtext-slate": "^1.5.0",
    "@studs/react": "workspace:1.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "payload": "^2.12.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.6",
    "ts-node": "10.9.2",
    "typescript": "^5.4.3",
    "web-component-analyzer": "^2.0.0"
  }
}