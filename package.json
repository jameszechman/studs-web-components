{
  "name": "studs-ui",
  "version": "1.0.0-beta.7",
  "scripts": {
    "build-lib": "pnpm copy:changelog && turbo run build --filter=@studs/docs...",
    "build": "turbo run build --filter=@studs/*",
    "build:watch": "turbo run build:watch --filter=@studs/*",
    "build:ui": "turbo run build --filter=@studs/ui...",
    "build:react": "turbo run build --filter=@studs/react...",
    "build:tests": "turbo run build --filter=@tests/*",
    "playroom:build": "turbo run playroom:build",
    "dev:docs": "turbo run dev:docs",
    "dev:docs-next": "turbo run dev:docs-next",
    "copy:changelog.old": "cp packages/ui/CHANGELOG.md apps/docs/docs/getting-started/CHANGELOG.md && echo '## Changelog' >> apps/docs/docs/getting-started/CHANGELOG.md",
    "copy:changelog": "echo '## Studs UI Change Log' | cat - packages/ui/CHANGELOG.md > temp && mv temp apps/docs/docs/getting-started/Changelog.md",
    "dev": "turbo run dev --parallel --filter=@studs/*",
    "dev:tests": "turbo run dev --parallel --filter=@tests/*",
    "test": "turbo run test --filter=@studs/*",
    "test:ui": "turbo run test:ui --filter=@studs/*",
    "coverage": "turbo run coverage --filter=@studs/*",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "serve": "turbo run serve",
    "clean": "turbo run clean && rm -rf node_modules",
    "storybook": "turbo run storybook",
    "analyze": "node scripts/analyze.js",
    "version-library": "node scripts/version.js",
    "changeset": "changeset",
    "changeset-version": "changeset version",
    "publish-packages": "pnpm build && changeset version && changeset publish && pnpm copy:changelog",
    "clean-dev": "git branch --merged origin/dev | grep -vw dev | xargs git branch -d",
    "clean-main": "git branch --merged origin/main | grep -vw main | xargs git branch -d",
    "github-dev": "git push -u github dev",
    "github-staging": "git push -u github staging",
    "github-main": "git push -u github main"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "eslint": "^7.32.0",
    "prettier": "^2.8.8",
    "turbo": "^1.13.2"
  },
  "packageManager": "pnpm@8.6.10"
}
